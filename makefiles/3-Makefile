CC=gcc
CFLAGS= -W -Wall -ansi -pedantic
LDFLAGS=
SRC= school.c main.c
OBJ= $(SRC:.c=.o)
NAME=school
RM=rm -rf
TMP= $(SRC:*~)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $^ $(LDFLAGS)

%.o: %.c
	$(CC) -o $@ -c $< $(CFLAGS)

clean:
	$(RM) -f $(TMP)
	$(RM) -f $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: fclean all
